@using Modules.UI.Models.Data
@using Modules.UI.Resources

@model Modules.UI.Models.Views.Query.QueryListViewModel

@{
	ViewBag.Title = Resources.List_cshtml_Execute_Query_storage;
}

@if (Model.IsCanCreateNewQuery)
{
@section navbar{
	@Html.ActionLink("Create", "CreateQuery", "Query",
		new {},
		new {@class = "modal-link btn btn-warning navbar-btn"})
}}

@{ Html.RenderPartial(
	   "Table/TableRenderView",
	   new TableRenderModel
	   {
		   RowIconClassName = "glyphicon glyphicon-tasks",
		   Table = Model.Table,
		   TargetAction = "Edit",
		   TargetController = "Query",
		   ArgumentSetter = row => new
		   {
			   queryId = row.EntityId
		   }
	   }); }